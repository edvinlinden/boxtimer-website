---
export interface Props {
  outerClass?: string;
  id?: string;
}

const { outerClass, id } = Astro.props;
---

<a
  href="https://apps.apple.com/us/app/the-box-timer/id1547518531"
  onclick="window.TelemetryDeck.sendSignal({type:'ClickGetAppButton'});"
  target="_blank"
  rel="noopener noreferrer"
  title="The Box Timer on the App Store"
  class={`btn btn-primary rounded-full animate-button-pulse ${outerClass}`}
  id={id}
>
  <img
    src="/images/apple-logo-white.svg"
    alt="Box Timer on the App Store"
    style="width: 15px; height: 18px; margin-left: 8px; margin-top:-3px;"
    width="15"
    height="18"
  />
  <span class="mx-2 font-sans">GET APP</span>
</a>
