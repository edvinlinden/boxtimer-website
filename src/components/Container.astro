---
export interface Props {
  outerClass?: string;
  innerClass?: string;
}

const { outerClass, innerClass } = Astro.props;
---

<div class={`flex w-full py-12 ${outerClass} relative`}>
  <div
    class={`flex w-full lg:w-[1024px] mx-auto my-8 px-8 lg:px-0 text-xl font-light font-sans ${innerClass} relative`}
  >
    <slot />
  </div>
</div>
