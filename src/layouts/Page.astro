---
import Header from "@components/Header.astro";
import "../styles/global.css";
import TelemetryDeck from "@components/TelemetryDeck.astro";
import PostHog from "@components/PostHog.astro";
export interface Props {
  title: string;
  description: string;
  url: string;
  canonical?: string;
}

const { title, description, url, canonical } = Astro.props;
const disableTracking = import.meta.env.DEV;
const openGraphImage = "https://boxtimer.app/images/og.png";
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="copyright" content="© Copyright 2020 to Present" />
    <meta name="author" content="Edvin Lindén" />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={openGraphImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="boxtimer.app" />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={openGraphImage} />
    <link rel="canonical" href={canonical || url} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "MobileApplication",
        "name": "Box Timer - Workout Timer",
        "description": "Free workout timer app for iPhone and iPad. Features count up, count down, and interval timers for boxing, HIIT, Tabata, and CrossFit training. No ads.",
        "operatingSystem": "iOS",
        "applicationCategory": "HealthApplication",
        "featureList": "Count up timer, Count down timer, Interval timer with work/rest rounds, No ads, Workout history, Three display themes, Works with music, Landscape mode, 6 languages",
        "screenshot": "https://boxtimer.app/images/box-timer-screenshot.png",
        "downloadUrl": "https://apps.apple.com/us/app/the-box-timer/id1547518531",
        "isAccessibleForFree": true,
        "inLanguage": ["en", "de", "es", "fr", "pl", "sv"],
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "ratingCount": "4030"
        },
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "author": {
          "@type": "Person",
          "name": "Edvin Lindén",
          "url": "https://edvinlinden.se"
        }
      }
    </script>
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://boxtimer.app/" },
        { "@type": "ListItem", "position": 2, "name": title, "item": url }
      ]
    })} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="mt-[75px] w-full overflow-x-hidden overlay-y-overlay">
      <slot />
    </div>
    <TelemetryDeck />
    <PostHog />
    <script defer>
      const getAppButtonHeader = document.getElementById(
        "get-app-button-header",
      );
      getAppButtonHeader.classList.add("opacity-100");
    </script>
  </body>
</html>
